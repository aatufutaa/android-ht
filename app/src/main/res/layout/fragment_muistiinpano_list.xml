<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.aatu.harjoitustyo.MuistiinpanoMuokkausFragment"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="15dp"
    >

    <TextView
        android:id="@+id/tvOtsikko"
        android:layout_width="294dp"
        android:layout_height="69dp"
        android:text="@string/muistiinpanot_otsikko"
        android:textSize="34sp" />

    <Button
        android:id="@+id/btnNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uusi_muistiinpano_nappi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMuistiinpanoList"
        android:layout_width="359dp"
        android:layout_height="651dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOtsikko" />
</androidx.constraintlayout.widget.ConstraintLayout>